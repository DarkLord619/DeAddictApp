<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="checkboxstyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorAccent" >@color/colorPrimaryDark</item>


    </style>
    <style name="BottomMenuColor" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
     <style name="floatinglabelstyle" parent="Theme.AppCompat.Light.DarkActionBar">
         <item name="android:background">@color/white</item>
    <item name="android:textColor">@color/black</item>
         <item name="android:textSize">16sp</item>

  </style>
    <style name="MatchSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@android:color/holo_orange_dark</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="MatchSpinnerTheme" parent="AppTheme">
        <item name="android:dropDownListViewStyle">@style/MatchSpinnerStyle</item>
    </style>

</resources>
